{% extends "layout/index.njk" %}

{% block title %}
  <title>Panier</title>
{% endblock %}

{% block css %}
  <link rel="stylesheet" href="/assets/styles/panier.css">
{% endblock %}

{% block content %}

  <div class="container mt-5 mb-5">
    <div class="row">
      <div class="d-flex">
        <h1>Votre Panier</h1>
        <h1 class="ml-3" style="color: rgb(60, 109, 11)">{{totalpanier}} €</h1>
      </div>
    </div>
  </div>


  <div class="panier-list row">
    {% for achat in panier %}
      <div class="col-12 d-flex align-items-stretch mb-1">

        <div class="card d-flex p-3 flex-column flex-fill">
            <div>
              <h5 class="card-title">{{achat.slug}}</h5>
              <div class="d-flex flex-row">
                <h4>{{achat.price}}</h4>
                <h5>€</h5>
              </div>
            </div>
        </div>
              
      </div>

    {% endfor %}
  </div>
{% endblock %}

<div class="card-body d-flex flex-column justify-content-between">
            