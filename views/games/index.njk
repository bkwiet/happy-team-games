{% extends "layout/index.njk" %}

{% block title %}
  <title>Happy Game Store : Games</title>
{% endblock %}

{% block css %}
  <link rel="stylesheet" href="/assets/styles/card.css">
  <link rel="stylesheet" href="/assets/styles/games.css">
{% endblock %}

{% block content %}

  <div class="container mt-5 mb-5">
    <div class="row">
      <div class="col">
        <h1>Games</h1>
      </div>

      {% if access %}
        <div class="col text-right">
          <a href="/games/new" class="btn btn-success btn-lg">Create a Game</a>
        </div>    
      {% endif %}
      
    </div>
  </div>

  <div id="collection" class="row">
    {% for game in games %}
      <div class="card flip-box col-12 col-md-3 col-lg-2 mx-2 mt-3" title="{{game.name}}">
        <div class="flip-box-inner">
          <div class="flip-box-front">
            <img class="card-img-top mt-2" src={{game.cover.url}} alt="Card image cap">
            <div class="card-body">
              <p class="card-text">{{game.name}}</p>
            </div>
            <div>
              <h4>{{game.price}} â‚¬</h4>
            </div>
            
          </div>

          <div class="flip-box-back">
              <div class="card-body">
                <a  href={{'/games/'+game.slug}} > 
                  <p class="card-text">{{game.summary}}</p>
                </a> 
              </div>
          </div>
        </div>
      </div>
    {%endfor %} 
  </div>
{% endblock %}
